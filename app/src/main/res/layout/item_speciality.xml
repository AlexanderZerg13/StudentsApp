<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:layout_marginBottom="12dp"
              android:layout_marginTop="12dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:orientation="vertical"
              android:paddingLeft="19dp"
              android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_speciality_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/proxy_ic_nav_info_20dp_black"
            android:tint="@color/colorBlack_54a"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@id/item_speciality_iv"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_found_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/drawer_item_text_color_selector"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Сколково Сколково Сколково СколковоСколково Сколково"/>

            <TextView
                android:id="@+id/item_found_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/drawer_item_text_color_selector_alpha"
                android:textSize="14sp"
                tools:text="Москва"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
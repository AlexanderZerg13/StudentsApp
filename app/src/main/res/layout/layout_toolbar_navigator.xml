<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_height="60dp">

    <ImageView
        android:id="@+id/layout_toolbar_navigator_btn_prior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:padding="6dp"
        android:src="@drawable/proxy_ic_keyboard_arrow_left_24dp_black"/>

    <LinearLayout
        android:id="@+id/layout_toolbar_navigator_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/layout_toolbar_navigator_btn_prior"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_toolbar_navigator_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorBlack_87a"
            android:textSize="20sp"
            android:text="О семестре"/>

        <TextView
            android:id="@+id/layout_toolbar_navigator_tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorBlack_87a"
            android:textSize="12sp"
            android:text="2016, 1 семестр"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/toolbar_navigator_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:src="@drawable/proxy_ic_keyboard_arrow_right_24dp_black"/>
</RelativeLayout>
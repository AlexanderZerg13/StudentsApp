<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingBottom="13dp"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:paddingTop="17dp">

    <TextView
        android:id="@+id/item_academic_plan_tv_lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:singleLine="false"
        android:layout_toLeftOf="@+id/item_academic_plan_tv_type"
        android:textColor="@color/drawer_item_text_color_selector"
        android:textSize="16sp"
        tools:text="Математический анализ Математический анализ"/>

    <TextView
        android:id="@+id/item_academic_plan_tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_academic_plan_tv_lesson_name"
        android:textColor="@color/drawer_item_icon_color_selector"
        android:textSize="14sp"
        tools:text="Карина Затонская"/>

    <ImageView
        android:id="@+id/item_academic_plan_iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/proxy_ic_keyboard_arrow_right_24dp_black"
        android:tint="@color/colorGray_20a"/>

    <TextView
        android:id="@+id/item_academic_plan_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_alignBottom="@id/item_academic_plan_tv_lesson_name"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/item_academic_plan_iv_arrow"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textColor="@color/colorDeepOrange"
        android:textSize="16sp"
        tools:text="Экзамен"/>

    <TextView
        android:id="@+id/item_academic_plan_tv_lesson_hours"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_alignRight="@id/item_academic_plan_tv_type"
        android:layout_below="@id/item_academic_plan_tv_type"
        android:textColor="@color/drawer_item_icon_color_selector"
        android:textSize="14sp"
        tools:text="90 ч"/>

</RelativeLayout>
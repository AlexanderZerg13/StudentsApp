<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteYellow1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:nestedScrollingEnabled="false"
        android:scaleType="fitXY"
        android:src="@drawable/background_login_page"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="45dp"
        android:paddingTop="79dp">

        <TextView
            android:id="@+id/fragment_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_left"
            android:text="ЛОГО"
            android:textColor="@color/colorDeepOrange"
            android:textSize="50sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_login_et_select_vuz_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fragment_login_et_name_til"
            android:layout_marginLeft="@dimen/login_margin_left"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/fragment_login_et_select_vuz"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_login_state_normal"
                android:drawableRight="@drawable/proxy_ic_arrow_drop_down_24dp_black_54a"
                android:editable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:hint="@string/fragment_login_anon_btn_select_vuz"
                android:paddingBottom="2.5dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack_38a"
                android:textSize="16sp"
                tools:text="Северо-Кавказский Федеральный Университет"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_login_et_name_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_login_logo"
            android:layout_marginLeft="@dimen/login_margin_left"
            android:layout_marginTop="53dp"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/fragment_login_et_name"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/you_FIO"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_login_et_password_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_login_et_name_til"
            android:layout_marginLeft="@dimen/login_margin_left"
            android:layout_marginTop="30dp"
            app:hintTextAppearance="@style/MyHintText">

            <com.maksim88.passwordedittext.PasswordEditText
                android:id="@+id/fragment_login_et_password"
                style="@style/MyEditText"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                app:pet_disableIconAlpha="true"
                app:pet_iconHide="@drawable/proxy_ic_pass_eye_open_24dp_red"
                app:pet_iconShow="@drawable/proxy_ic_pass_eye_closed_24dp_red"
                app:pet_nonMonospaceFont="true"
                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/fragment_login_tv_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_login_et_password_til"
            android:layout_marginLeft="@dimen/login_margin_left"
            android:layout_marginTop="6.5dp"
            android:singleLine="false"
            android:textColor="@color/colorBlack_38a"
            android:textSize="12sp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/fragment_login_btn_enter"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fragment_login_btn_enter_anon"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="@dimen/login_margin_left"
            android:background="@drawable/button_enter_selector"
            android:enabled="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="9dp"
            android:paddingEnd="21.5dp"
            android:paddingLeft="21.5dp"
            android:paddingRight="21.5dp"
            android:paddingStart="21.5dp"
            android:paddingTop="11dp"
            android:text="@string/fragment_login_btn_enter"
            android:textAllCaps="true"
            android:textColor="@color/button_enter_text_color_selector"
            android:textSize="14sp"/>

        <ProgressBar
            android:id="@+id/fragment_login_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/fragment_login_btn_enter"
            android:layout_marginLeft="16dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/fragment_login_btn_enter_anon"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="@dimen/login_margin_left_for_button"
            android:enabled="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="10dp"
            android:text="@string/fragment_login_btn_enter_anon"
            android:textColor="@color/button_another_enter_text_color_selector"
            android:textSize="14sp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/fragment_login_demo"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_login_btn_enter"
            android:layout_marginLeft="@dimen/login_margin_left"
            android:layout_marginTop="-90dp"
            android:background="@drawable/button_enter_selector"
            android:text="@string/demo"
            android:textColor="@color/button_enter_text_color_selector"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/fragment_login_btn_settings"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="26dp"
            android:enabled="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="10dp"
            android:text="@string/settings"
            android:textColor="@color/button_another_enter_text_color_selector"
            android:textSize="14sp"
            android:visibility="gone"/>

    </RelativeLayout>
</FrameLayout>
